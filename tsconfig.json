{
  "compilerOptions": {
    "target": "es2017",
    "module": "commonjs",
    "outDir": "./",
    "rootDir": "./",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "moduleResolution": "node",
    "removeComments": true,
    "noImplicitAny": false
  },
  "include": ["index.ts"],
  "exclude": ["node_modules"]
}
